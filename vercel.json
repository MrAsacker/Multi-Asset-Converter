{
  "version": 2,
  "framework": "vite",
  "installCommand": "npm install",
  "buildCommand": "cd frontend && npm install --include=dev && npm run build && cd ../api && npm install",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/server.js": {
      "includeFiles": "api/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/"
    }
  ]
}
